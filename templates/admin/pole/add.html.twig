{% extends 'admin.html.twig' %}

{% block title %}Ajouter un pole d'activité • Generation Boomerang{% endblock %}

{% block content %}
    <section class="category">
        <h1 class="section__title">Ajouter un pôle d'activité</h1>
        <h3 class="section__subtitle">C'est dans cet espace que vous allez pouvoir ajouter un nouveau pôle d'activité.</h3>

        <div class="article__menu">
            <a href="{{ path('admin_pole') }}" class="article__menu-back"><i class='bx bx-arrow-back' ></i> <span>retour aux pôles d'activités</span></a>
        </div>

        <div class="category__container">
            <div class="category__add-form">
                {{ form_start(form) }}

                <div class="form">
                    <i class='bx bx-pin'></i>
                    {{ form_widget(form.name) }}
                </div>
                <div class="form">
                    <i class='bx bx-pin'></i>
                    {{ form_widget(form.description) }}
                </div>
                <div class="form">
                    <i class='bx bx-pin'></i>
                    {{ form_widget(form.admin) }}
                </div>
                <button class="article__form-button" type="submit">Ajouter</button>

                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
