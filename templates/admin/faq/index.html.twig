{% extends 'admin.html.twig' %}

{% block title %}FAQ • Generation Boomerang{% endblock %}

{% block content %}
    <section class="article">
        <h1 class="section__title">Gérer la Foire Aux Questions</h1>
        <h3 class="section__subtitle">C'est dans cet espace que vous allez pouvoir gérer les différentes questions / réponses.</h3>

        <div class="article__menu">
            <a href="{{ path('admin') }}" class="article__menu-back"><i class='bx bx-arrow-back' ></i> <span>retour à l'administration</span></a>
            <a href="{{ path('add_faq') }}" class="article__menu-add"><i class='bx bx-plus-medical' ></i> <span>ajouter une quesion / réponse</span></a>
        </div>

        {% for message in app.flashes('message') %}
            <h3 class="section__subtitle-alert">{{ message }}</h3>
        {% endfor %}

        <div class="article__table-container">
            {% for faq in faqs %}
                <div class="article__table" id="{{ faq.id }}">
                    <div class="article__table-left">
                        <div class="article__table-name">
                            <h3 class="article__name"><img src="{{ asset('uploads/partner/boomerang1.png')}}"> {{ faq.question }}</h3>
                            <h5 class="article__user">{{ faq.title }}</h5>
                            <h5 class="article__category">{{ faq.response }}</h5>
                        </div>
                    </div>
                    <div class="article__table-right">
                        <div class="article__table-edit">
                            <a href="{{ path('edit_faq', {id: faq.id}) }}" class="article__edit"><i class='bx bx-edit-alt' ></i> éditer</a>
                        </div>
                        <div class="article__table-delete">
                            <a href="{{ path('delete_faq', {id: faq.id}) }}" class="article__delete"><i class='bx bx-trash' ></i> supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}