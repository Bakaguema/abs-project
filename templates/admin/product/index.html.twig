{% extends 'admin.html.twig' %}

{% block title %}Abonnements • Generation Boomerang{% endblock %}

{% block content %}
    <section class="article">
        <h1 class="section__title">Gérer les abonnements</h1>
        <h3 class="section__subtitle">C'est dans cet espace que vous allez pouvoir gérer les abonnements.</h3>

        <div class="article__menu">
            <a href="{{ path('admin') }}" class="article__menu-back"><i class='bx bx-arrow-back' ></i> <span>retour à l'administration</span></a>
            <a href="{{ path('admin_add_product') }}" class="article__menu-add"><i class='bx bx-plus-medical' ></i> <span>ajouter un abonnement</span></a>
        </div>

        {% for message in app.flashes('message') %}
            <h3 class="section__subtitle-alert">{{ message }}</h3>
        {% endfor %}

        <div class="article__table-container">
            {% for product in products %}
                <div class="article__table" id="{{ product.id }}">
                    <div class="article__table-left">
                        <div class="article__table-name">
                            <h3 class="article__name"><i class='bx bx-question-mark' ></i> {{ product.name }}</h3>
                            <h5 class="article__user">{{ product.subtitle }}</h5>
                            <h5 class="article__category">{{ product.description }}</h5>
                            <h5 class="article__category">{{ product.price }}</h5>
                        </div>
                    </div>
                    <div class="article__table-right">
                        <div class="article__table-edit">
                            <a href="{{ path('admin_edit_product', {id: product.id}) }}" class="article__edit"><i class='bx bx-edit-alt' ></i> éditer</a>
                        </div>
                        <div class="article__table-delete">
                            <a href="{{ path('admin_delete_product', {id: product.id}) }}" class="article__delete"><i class='bx bx-trash' ></i> supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}