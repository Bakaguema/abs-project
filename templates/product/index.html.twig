        <div class="footer__container grid">
            <div class="footer__data">
                <h2 class="footer__title">Generation Boomerang<small>©</small></h2>
                <ul>
                    <li><a href="{{ path('condition') }}" class="footer__link">Conditions d'utilisations</a></li>
                    <li><a href="#" class="footer__link">Qui sommes-nous ?</a></li>
                    <li><a href="{{ path('partner') }}" class="footer__link">Nos partenaires</a></li>
                </ul>
            </div>

            <div class="footer__data">
                <h2 class="footer__title">Explorer</h2>
                <ul>
                    <li><a href="{{ path('main') }}" class="footer__link">Accueil</a></li>
                    <li><a href="{{ path('articles') }}" class="footer__link">Articles</a></li>
                    <li><a href="{{ path('experiences') }}" class="footer__link">Retours d'expérience</a></li>
                    <li><a href="#" class="footer__link">Pôle d'activités</a></li>
                </ul>
            </div>

            <div class="footer__data">
                <h2 class="footer__title">Suivez-nous</h2>
                <a href="#" class="footer__social footer__social-innovation"><i class='bx bxl-facebook' ></i></a>
                <a href="#" class="footer__social footer__social-innovation"><i class='bx bxl-instagram' ></i></a>
                <a href="#" class="footer__social footer__social-innovation"><i class='bx bxl-twitter' ></i></a>
